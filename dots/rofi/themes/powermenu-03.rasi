* {
    font:                        "JetBrainsMono Nerd Font 12";
    background:                  rgba(20, 20, 20, 0.8);
    foreground:                  #e8eaed;
    selected:                    #e8eaed;
    selected-fg:                 #000;
}

window {
    transparency:                "real";
    location:                    center;
    anchor:                      center;
    background-color:            @background;
    border-radius:               5px;
    box-shadow:                  0px 0px 4px #000;
    children:                    [ "mainbox" ];
}

mainbox {
    spacing:                     0px;
    background-color:            transparent;
    children:                    [ "listview" ];
}

listview {
    columns:                     5;
    lines:                       1;
    layout:                      horizontal;
    spacing:                     5px;
    margin:                      15px;
    background-color:            transparent;
}

element {
    padding:                     15px 25px;
    border-radius:               5px;
    background-color:            transparent;
    text-color:                  @foreground;
    cursor:                      pointer;
}

element-text {
    background-color:            transparent;
    text-color:                  inherit;
    cursor:                      inherit;
    vertical-align:              0.5;
    horizontal-align:            0.5;
}

element selected {
    background-color:            @selected;
    text-color:                  @selected-fg;
}
